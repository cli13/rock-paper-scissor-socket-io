  <body>
    <%- include('./partials/navbar.ejs'); %>
    <div class="container overflow-hidden">
      <div class="grid-container">
        <div class="chat-box">
          <div class="chat-heading">
            <span>Chat room</span>
          </div>
          <div class="chat-content">
            <ul class="chat-message"></ul>
