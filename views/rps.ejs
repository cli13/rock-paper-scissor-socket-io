                type="text"
                class="form-control"
                id="msg"
                autocomplete="off"
                placeholder="Your message here"
                aria-describedby="basic-addon2"
              />
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">
                  Button
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="chat"></div>
        <div class="content">
          content
          <div class="input">
            <button>rock</button>
            <button>paper</button>
            <button>scissor</button>
          </div>
        </div>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../javascripts/rps.js"></script>
  </body>
</html>
